{
  "version": 2,
  "builds": [
    {
      "src": "threadr-nextjs/package.json",
      "use": "@vercel/next",
      "config": {
        "rootDirectory": "threadr-nextjs"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://threadr-production.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "threadr-nextjs/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "@next_public_api_base_url",
    "NEXT_PUBLIC_API_KEY": "@next_public_api_key", 
    "NEXT_PUBLIC_APP_URL": "@next_public_app_url"
  }
}